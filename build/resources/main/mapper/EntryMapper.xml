<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.let.mapper.EntryMapper">
    <resultMap type="com.example.let.domain.Entry" id="result">
        <result property="idx" column="idx" />
        <result property="userId" column="user_id" />
        <result property="cardId" column="card_id" />
        <result property="entryTime" column="entry_time" />
        <result property="status" column="status" />
        <result property="mealType" column="meal_type" />
    </resultMap>

    <sql id="sql_select">
        SELECT
            idx
             , user_id
             , card_id
             , DATE_FORMAT(entry_time, '%Y-%m-%dT%T+09:00')
             , status
             , meal_type
    </sql>

    <select id="get" resultMap="result">
        <include refid="sql_select"></include>
        FROM entry
    </select>
    <select id="getById" resultMap="result">
        <include refid="sql_select"></include>
        FROM entry
        WHERE user_id =
            (
                SELECT idx FROM `user`
                WHERE id = #{id}
            )
    </select>
    <select id="getByDate" resultMap="result">
        <include refid="sql_select"></include>
        FROM entry
        WHERE date_format(entryTime, '%Y-%m-%d') = #{date};
    </select>

    <insert id="register" parameterType="com.example.let.domain.Entry"
            keyProperty="idx">

        INSERT INTO entry
        (
            idx
            , user_id
            , card_id
            , entry_time
            , status
            , meal_type
        )
        VALUES
        (
            #{idx}
            , #{userId}
            , #{cardId}
            , now()
            , #{status}
            , #{mealType}
        )
    </insert>

</mapper>